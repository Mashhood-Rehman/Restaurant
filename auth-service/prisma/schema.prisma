generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  name       String
  email      String  @unique
  password   String
  profileImg String? @default("dummyImage.webp")
  role       Role    @default(dbgenerated("'customer'::role"))
  }

enum Role {
  superadmin
  manager
  customer
  chef
  rider
}
